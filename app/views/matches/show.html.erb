<h3>Show Match</h3>

<p>
  <strong>Name:</strong>
  <%= @match.name %>
</p>
<p>
  <strong>Time:</strong>
  <%= @match.time %>
</p>


<ol>
<% for t in @match.teams %>
  <li>
    <%= t.name %>


<!-- link_to "WIN", team_path( :result => "Win" , :id => t.id ), :method => :put  -->

<%= nested_form_for t do |f| %>
<%= f.hidden_field :result, value: "Win" %>
<%= f.submit "WIN"  %>
<% end %>

    <ul>
    <% for u in t.team_members %>
      <li><%= u.user.email %></li>
    <% end %>
    </ul>
  </li>
<% end %>
</ol>





<p>
  <%= link_to "Edit", edit_match_path(@match) %> |
  <%= link_to "Destroy", @match, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", matches_path %>
</p>